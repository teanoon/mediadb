.col-md-12
  %h3
    = t '.listing_media'
    %small= link_to t('.new_medium'), new_medium_path, class: 'btn btn-default btn-xs'
    
.col-md-8.col-md-offset-2
  %table.table
    %thead
      %tr
        %th= t '.id'
        %th= t '.media_type'
        %th= t '.login_name'
        %th= t '.opt'
    %tbody
      - @media.each do |medium|
        %tr
          %td= medium.id
          %td= medium.media_type
          %td= medium.login_name
          %td
            .btn-group
              = link_to t('phrase.edit'), edit_medium_path(medium), class: 'btn btn-default btn-xs'
              = link_to t('phrase.destroy'), medium, method: :delete, data: { confirm: t('phrase.are_you_sure') }, class: 'btn btn-default btn-xs'
